<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.view.ViewPager
        android:id="@+id/fist_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/fist_viewPager"
        app:layout_constraintHeight_percent="0.1">
        <RadioButton
            android:id="@+id/rb1"
            android:drawableTop="@drawable/phone"
            android:text="通话"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb2"
            android:drawableTop="@drawable/language"
            android:text="留言"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb3"
            android:drawableTop="@drawable/mode"
            android:text="模式"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb4"
            android:drawableTop="@drawable/message"
            android:text="消息"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb5"
            android:drawableTop="@drawable/my"
            android:text="我的"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>